@using CRWBookStore.Infrastructure
@using static System.Web.HttpUtility
@model IEnumerable<CRWBookStore.Models.MovieModel>

@{
    ViewData["Title"] = "Movies";
}

<h1>Movies and Videos</h1>

<div>
    <h4> Welcome to our Free Movie catalog! A download will be avaliable upon purchase!</h4>
    <hr />
    @foreach (var item in Model)
    {


        <div style="display:inline;margin-left:100px;">
            <dl class="row" style="padding-left: 50px;">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => item.ID)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => item.movie_name)
                </dd>

                <dt class="col-sm-2">
                    <img src="@item.movie_picture" width="192" height="108">
                </dt>
                
                <dt class="col-sm-2">
                    <div style="padding: 20px">
                        <iframe width="640" height="360" src="@item.link" title="New Action Movie (#TREALER#)" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>

                    </div>
                </dt>



        </dl>
    </div>
                        <hr />
     }
                </div>
                <div>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Movie" asp-action="BrowseMovie">Back to Top</a>
                </div>

