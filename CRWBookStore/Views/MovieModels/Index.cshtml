@model IEnumerable<CRWBookStore.Models.MovieModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Movie</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.movie_picture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.movie_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.link)
            </th>

            <th> Updata</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="@item.movie_picture" width="140px">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.movie_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.link)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> <br/>
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> <br/>
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
