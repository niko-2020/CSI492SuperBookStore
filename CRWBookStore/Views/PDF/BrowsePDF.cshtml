@using CRWBookStore.Infrastructure
@model IEnumerable<CRWBookStore.Models.PDFModel>

@{
    ViewData["Title"] = "PDFs";
}

<h1>PDFs</h1>

<div>
    <h4> Welcome to our free PDF list. Download as many books as you like!</h4>
    <hr />
    @foreach (var item in Model)
    {
        <div class="bookPicture" style="display:inline-block;float:left; margin-top:10px;padding-top: 35px;">

        </div>
        <div style="display:inline;margin-left:100px;">
            <dl class="row" style="padding-left: 50px;">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => item.ID)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => item.pdf_name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => item.link)
                </dt>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => item.pdf_picture)
                </dt>


                <form id="@item.ID" asp-page="/Cart" method="post">
                    <input type="hidden" asp-for="@item.ID" />
                    <input type="hidden" name="productId" value="@item.ID" />
                    <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                    <span class="card-text p-1">
                        <button type="submit"
                                class="btn btn-success btn-sm pull-right" style="float:right">
                            <img style="height: 25px;padding-right: 3px;padding-bottom: 3px;" src="~/shopping-cart-icon.svg" />
                            Add To Cart
                        </button>
                    </span>
                </form>


            </dl>
        </div>
        <hr />
    }
</div>
<div>
    <a class="nav-link text-dark" asp-area="" asp-controller="Inventory" asp-action="BrowsePDF">Back to Top</a>
</div>

