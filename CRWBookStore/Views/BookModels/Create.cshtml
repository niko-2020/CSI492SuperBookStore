@model CRWBookStore.Models.BookModel

@{
    ViewData["Title"] = "Add Book";
}

<style>
    input {
        text-align: left;
        clear: both;
        float: left;
        margin-right: 30px;
        border:double;
        background:white;
        background-color:white;
    }
</style>

<div>
    <img src="https://th.bing.com/th/id/R.fdf78ae25307cc1d9d4763cda2d72c6c?rik=Tbqs307SStNzoQ&riu=http%3a%2f%2fwww.thejainbrothers.com%2fwp-content%2fuploads%2f2017%2f03%2fbooks-library-banner.jpg&ehk=zFLrR82cOpPdFQkf4CA8WJt4HlEVxR6OSskCri3FZQA%3d&risl=&pid=ImgRaw&r=0" width="1240" height="340">
</div>
<hr />
<!--Contact-->
<section class="contact">
    <div class="container">
        <h3 class="title-txt"><span>A</span>dd <span>B</span>ook</h3>
        
            
                <form asp-action="Create" enctype="multipart/form-data">

                    <div class="form-group">
                        <input asp-for="Title" class="form-control" type="text" placeholder="Title"/>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        
                        <input asp-for="isbn13" class="form-control" placeholder="ISBN 13"  />
                        <span asp-validation-for="isbn13" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        
                        <input asp-for="Language_id" class="form-control" placeholder="Language ID"/>
                        <span asp-validation-for="Language_id" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Num_pages" class="form-control" placeholder="Number of pages"/>
                        <span asp-validation-for="Num_pages" class="text-danger"></span>
                    </div>
                    <div class="form-group">                        
                        <input asp-for="Publication_date" class="form-control" placeholder="Data Publication"/>
                        <span asp-validation-for="Publication_date" class="text-danger"></span>
                    </div>
                    <div class="form-group">                        
                        <input asp-for="Publisher_id" class="form-control" placeholder="Publisher ID" />
                        <span asp-validation-for="Publisher_id" class="text-danger"></span>
                    </div>
                    <div class="form-group">                        
                        <input asp-for="price" class="form-control" placeholder="Price"/>
                        <span asp-validation-for="price" class="text-danger"></span>
                    </div>
                    <div class="form-group">                        
                        <input asp-for="picture" class="form-control" placeholder="Picture Link" />
                        <span asp-validation-for="picture" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
           
        
    </div>
</section>
<div>
    <a asp-action="Index">Back to Edit List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
